{
	"name": "unoserver-web",
	"version": "0.7.0",
	"private": true,
	"description": "Provides API for Unoserver",
	"author": "Alex Kondratiuk <lynxtaa@gmail.com>",
	"type": "module",
	"scripts": {
		"build": "rimraf build/* && tsc",
		"build:windows": "rimraf --glob build/* && tsc",
		"check-format": "pnpm run prettier --check",
		"check-types": "tsc --noEmit",
		"dev": "NODE_ENV=development tsc-watch --onSuccess \"node -r dotenv-safe/config build/index.js\"",
		"format": "pnpm run prettier --write",
		"lint": "eslint src",
		"prepare": "husky",
		"prettier": "prettier \"src/**/*\"",
		"start": "NODE_ENV=production node -r dotenv-safe/config build/index.js",
		"test": "is-ci-cli \"test:coverage\" \"test:watch\"",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"bump-deps": "npx npm-check-updates --deep -u && pnpm install",
		"validate": "pnpm run lint && pnpm run check-format && pnpm run check-types"
	},
	"prettier": {
		"printWidth": 90,
		"quoteProps": "consistent",
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true,
		"arrowParens": "avoid",
		"overrides": [
			{
				"files": "*.md",
				"options": {
					"useTabs": false
				}
			}
		]
	},
	"nano-staged": {
		"*": "prettier --write --ignore-unknown"
	},
	"dependencies": {
		"@fastify/cors": "11.1.0",
		"@fastify/multipart": "9.3.0",
		"@fastify/swagger": "9.6.1",
		"@fastify/swagger-ui": "5.2.3",
		"content-disposition": "1.0.1",
		"dotenv-safe": "9.1.0",
		"execa": "9.6.1",
		"fastify": "5.6.2",
		"http-errors": "2.0.1",
		"mime-types": "3.0.2",
		"p-queue": "9.0.1",
		"p-retry": "7.1.0",
		"pino": "10.1.0"
	},
	"devDependencies": {
		"@eslint/js": "9.39.1",
		"@types/content-disposition": "0.5.9",
		"@types/http-errors": "2.0.5",
		"@types/mime-types": "3.0.1",
		"@types/node": "24.10.1",
		"@vitest/coverage-v8": "4.0.15",
		"eslint": "9.39.1",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-import": "2.32.0",
		"eslint-plugin-unicorn": "62.0.0",
		"globals": "16.5.0",
		"husky": "9.1.7",
		"is-ci-cli": "2.2.0",
		"nano-staged": "0.9.0",
		"pino-pretty": "13.1.3",
		"prettier": "3.7.4",
		"rimraf": "6.1.2",
		"tsc-watch": "7.2.0",
		"typescript": "5.9.3",
		"typescript-eslint": "8.48.1",
		"undici": "7.16.0",
		"vitest": "4.0.15"
	},
	"packageManager": "pnpm@10.14.0",
	"engines": {
		"node": ">=22.11.0"
	}
}
